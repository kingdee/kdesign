{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "react": ["node_modules/@types/react"],
      "kdesign": [
        "components/index.tsx"
      ],
      "kdesign/es/*": [
        "components/*"
      ]
    },
    "allowJs": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
  ]
}
